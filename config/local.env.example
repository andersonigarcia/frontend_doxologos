## Copy this file to config/local.env and fill with real secrets for local development.
# Do NOT commit your local.env to git.

# Logging Configuration
# Valid levels: SILENT, ERROR, WARN, INFO, DEBUG
# Default: DEBUG (development), SILENT (production)
VITE_LOG_LEVEL=DEBUG

# Supabase
SUPABASE_URL=https://your-supabase.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
VITE_SUPABASE_URL=https://your-supabase.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Mercado Pago
MP_ACCESS_TOKEN=your_mercadopago_access_token
MP_PUBLIC_KEY=your_mercadopago_public_key
MP_BACK_SUCCESS=https://your-domain.com/payment/success
MP_BACK_FAILURE=https://your-domain.com/payment/failure
MP_BACK_PENDING=https://your-domain.com/payment/pending

# Zoom
ZOOM_BEARER_TOKEN=your_zoom_jwt_or_oauth_token
ZOOM_USER_ID=your_zoom_user_id_or_email
ZOOM_TIMEZONE=America/Sao_Paulo

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=no-reply@yourdomain.com

# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+5511999999999

# SMTP Hostinger (Sistema de E-mail)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USER=noreply@seudominio.com
SMTP_PASS=sua_senha_smtp
SMTP_FROM_NAME=Doxologos
SMTP_FROM_EMAIL=noreply@seudominio.com
VITE_SMTP_FROM_NAME=Doxologos
VITE_SMTP_FROM_EMAIL=noreply@seudominio.com

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_ENABLE_ANALYTICS=true

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ERROR_TRACKING_ENABLED=true

# Development Settings
VITE_ENVIRONMENT=development
